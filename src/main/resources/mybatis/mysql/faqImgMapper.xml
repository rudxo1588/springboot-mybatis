<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.demo.biz.mapper.FaqMapper">
	
	<!-- 
		select를 사용한 assciation 방법 기본 select문을 따로 만들어서 컬렉션에서 불러와 사용
		
		1:1일 경우에만 사용한다.
	 -->
	<resultMap type="FaqImgVo" id="getFaqImg" autoMapping="true">
		<id column="faq_seq" property="faqSeq" jdbcType="BIGINT"/>
		<association column="faq_seq" property="faqList" select="selectList" autoMapping="true">
		</association>
	</resultMap>
	
	<select id="selectFaqImgList" resultType="FaqImgVo">
		select
			*
		from 
			faq_img
	</select>
	
	<select id="getFaqOneImg" resultMap="getFaqImg">
		select
			*
		from
			faq_img
	</select>
</mapper>